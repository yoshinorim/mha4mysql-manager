use strict;
use warnings FATAL => 'all';

use Getopt::Long qw(:config pass_through);
use Pod::Usage;
use MHA::ManagerConst;
use MHA::PaxosLock;

my $help;
my $version;

$| = 1;

GetOptions(
  'help'           => \$help,
  'version'        => \$version,
);

my $exit_code = 1;

if ($version) {
    print "masterha_paxos_lock version $MHA::ManagerConst::VERSION.\n";
    exit 0;
}

if ($help) {
    pod2usage(0);
}

$exit_code = MHA::PaxosLock::main(@ARGV);
exit $exit_code;

# ############################################################################
# Documentation
# ############################################################################

=pod

=head1 NAME

masterha_paxos_lock - Acquire or release the lock which ensure that there is only one running manager on all of the nodes. 

=head1 SYNOPSIS

# For acquire the lock

masterha_paxos_lock --lock --holder=host1 --global_conf=/etc/masterha_default.cnf --conf=/usr/local/masterha/conf/app1.cnf

# For release the lock

masterha_paxos_lock --unlock --holder=host1 --global_conf=/etc/masterha_default.cnf --conf=/usr/local/masterha/conf/app1.cnf


